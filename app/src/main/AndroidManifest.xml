<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:forceDarkAllowed="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/csi_logo_without_background"
        android:label="CSI Admin App"
        android:roundIcon="@drawable/csi_logo_without_background"
        android:supportsRtl="true"
        android:theme="@style/Theme.CSIAppCompose"
        tools:targetApi="31">
        <activity
            android:name=".pages.CreateTaskActivity"
            android:exported="false"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <!-- <activity -->
        <!-- android:name=".pages.GroupDetailsActivity" -->
        <!-- android:exported="false" /> -->
        <activity
            android:name=".pages.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.FillYourDetail"
            android:exported="false"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.CreateAnnouncement"
            android:exported="false" />
        <activity
            android:name=".pages.ForgetScreen"
            android:exported="false"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.LoginScreen"
            android:exported="false"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="CSI Admin App"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TaskDetailsActivity"
            android:exported="true"
            android:label="CSI Admin App"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.HomePage.CreateEventActivity"
            android:exported="true"
            android:theme="@style/Theme.CSIAppCompose"
            android:windowSoftInputMode="adjustResize" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>